{
  "expo": {
    "name": "ScentSwap",
    "slug": "scentswap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "scentswap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.scentswap.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#6B4EFF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.scentswap.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ScentSwap to access your camera to take photos of your fragrances"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ScentSwap to access your photos to add fragrance images"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#6B4EFF"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
